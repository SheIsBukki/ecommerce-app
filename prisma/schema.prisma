generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String @id @default(cuid())
  passwordHash String
  email        String @unique

  sessions Session[]

  Cart Cart?
}

model Session {
  id        String   @id
  userId    String
  expiresAt DateTime

  user User @relation(references: [id], fields: [userId], onDelete: Cascade)
}

model CartLineItem {
  id              String @id
  sanityProductId String
  quantity        Int

  title String
  price Float
  image String

  cartId String
  Cart   Cart   @relation(references: [id], fields: [cartId], onDelete: Cascade)
}

model Cart {
  id     String  @id
  userId String? @unique
  user   User?   @relation(references: [id], fields: [userId], onDelete: Cascade)

  items CartLineItem[]
}
